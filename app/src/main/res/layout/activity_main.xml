<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/pager"></androidx.viewpager.widget.ViewPager>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/group">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="首页"
            android:button="@null"
            android:gravity="center"
            android:textSize="20sp"
            android:checked="true"
            android:background="@drawable/mainselect"
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/bt1"></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="分类"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/mainselect"
            android:textSize="20sp"
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/bt2"></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发现"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/mainselect"
            android:textSize="20sp"
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/bt3"></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="购物车"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/mainselect"
            android:textSize="20sp"
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/bt4"></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainselect"
            android:text="我的"
            android:button="@null"
            android:gravity="center"
            android:textSize="20sp"
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/bt5"></RadioButton>
    </RadioGroup>

</LinearLayout>